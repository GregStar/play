package  {		import flash.display.MovieClip;	import flash.events.Event;			public class Rotate extends Zoom {		private var spinSpeed:Number = 4;		private var funktionsAufruf:int = 0;				public function Rotate() {			addEventListener(Event.ADDED_TO_STAGE, geadded);		}				private function geadded(evt:Event){			stop();			width = width/4;		//bleibt konstant			height = height/4;							/* drehen */			addEventListener(Event.ENTER_FRAME, spin);		}//ende geadded()				private function spin(evt:Event){		//Elemente drehen			funktionsAufruf ++;			if(funktionsAufruf%spinSpeed == 0){				if(currentFrame == totalFrames){ gotoAndStop(1);				}else{ nextFrame(); }			}		}//ende spin()			}	}