package  {	import flash.text.*;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.net.URLVariables;	import flash.net.URLRequest;	import flash.net.URLLoader;	import flash.display.Loader;	import flash.display.Sprite;		public class Anzeige extends Sprite {		private var ausgabe:String = '';		private var ausgabe_txt:TextField;		private var font:Font;				public function Anzeige() {			addEventListener(Event.ADDED_TO_STAGE, geadded);		}// ende Konstruktor endeScreen				private function geadded(evt:Event){			/* zentriert einfügen */			//x = Object(parent).spielfeldWidth/2;			//y = Object(parent).spielfeldHeight/2;						/* Textformat für Textfeld Punkte festlegen */			var anzeigeFormat:TextFormat = new TextFormat();				anzeigeFormat.align = TextFormatAlign.CENTER;								// KAMPAGNE 1: street				if(Object(parent).kampagne == 1){					font = new Tahoma();					anzeigeFormat.color = 0xFFFFFF;					anzeigeFormat.size = 90;					anzeigeFormat.bold = true;				//KAMPAGNE 2 : green				}else if(Object(parent).kampagne == 2){					font = new Tahoma();					anzeigeFormat.color = 0xF29C01;					anzeigeFormat.size = 110;						anzeigeFormat.bold = false;									//STANDART				}else{					font = new Arial();					anzeigeFormat.color = 0x318508;					anzeigeFormat.size = 90;						anzeigeFormat.bold = true;				}				anzeigeFormat.font = font.fontName;						/* Textfeld für Punktestand erstellen */			ausgabe_txt = new TextField();				ausgabe_txt.x = 0;				ausgabe_txt.y = Object(parent).spielfeldHeight/2 - ausgabe_txt.height / 2;				ausgabe_txt.type = TextFieldType.DYNAMIC;				ausgabe_txt.defaultTextFormat = anzeigeFormat;				ausgabe_txt.width = Object(parent).spielfeldWidth;				ausgabe_txt.height = 180;				ausgabe_txt.text = '';		}// ende geadded				public function textAusgeben(ausgabeText:String){			ausgabe = ausgabeText;			ausgabe_txt.text = ausgabe;			addChild(ausgabe_txt);		}//ende textAusgeben				public function clearText(){			ausgabe = '';			removeChild(ausgabe_txt);		}//ende clearText()	}}