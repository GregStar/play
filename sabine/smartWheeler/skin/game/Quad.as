package  {		import flash.display.MovieClip;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	import flash.events.Event;	import Quad;	import Stern;		public class Quad extends MovieClip {		private var sideSpeed:Number = 10;		private var moveLeft:int = 0;		private var moveRight:int = 0;				public function Quad() {			addEventListener(Event.ADDED_TO_STAGE, geadded);		}//ende Konstruktor Quad				private function geadded(evt:Event){			//Geschwindigkeit festlegen; Quad bewegt sich in höheren Level schneller rechts / links			sideSpeed = Object(parent).quadSpeed * Object(parent).level/5 + 10;						stop();			x = Math.random() * Object(parent).spielfeldWidth/2;		//Zufallswert als Startposition			y = Object(parent).spielfeldHeight - 80;					// am unteren SpielfeldRand			z = 10;						/* Größe anpassen */			width = 2*width/3;			height = 2*height/3;						/* Steuerung über Tasten*/ 			stage.addEventListener(KeyboardEvent.KEY_DOWN, tasteRunter);			stage.addEventListener(KeyboardEvent.KEY_UP, tasteRauf);						/* Bewegung bei jedem Bildaufbau */			addEventListener(Event.ENTER_FRAME, moveQuad);		}//ende init				private function tasteRunter(evt:KeyboardEvent){			/* Linke Pfeiltaste drücken*/			if(evt.keyCode == Keyboard.LEFT ){ moveLeft = -1; }						/* Rechte Pfeiltaste drücken*/						if(evt.keyCode == Keyboard.RIGHT ){ moveRight = 1; }		}//ende tasteRunter				private function tasteRauf(evt:KeyboardEvent){			/* Linke Pfeiltaste auslassen */			if(evt.keyCode == Keyboard.LEFT ){ moveLeft = 0; }						/* Rechte Pfeiltaste auslassen */				if(evt.keyCode == Keyboard.RIGHT ){ moveRight = 0; }		}//ende tasteRauf						private function moveQuad(evt:Event){			if(Object(parent).game === true){				moveX();				moveY();			}		}//ende moveQuad()				private function moveX(){			x += ruckeln();			x += moveLeft*sideSpeed + moveRight*sideSpeed;						//welches Frame angezeigt wird:			if(x > 3*Object(parent).spielfeldWidth/4){ gotoAndStop(4); }			if(x < 3*Object(parent).spielfeldWidth/4 && x > Object(parent).spielfeldWidth/2){ gotoAndStop(3); }			if(x > Object(parent).spielfeldWidth/4 && x < Object(parent).spielfeldWidth/2){ gotoAndStop(2); }			if (x < Object(parent).spielfeldWidth / 4){ gotoAndStop(1); }						//kann am Rand nicht raus			if(x < width/2){ x = width/2; }			if(x > Object(parent).spielfeldWidth - width/2){ x = Object(parent).spielfeldWidth - width/2; }		}//ende moveX				private function moveY(){			y += ruckeln();			// Quad kann nicht nach unten weg			if(y > Object(parent).spielfeldHeight - height/2){ y = Object(parent).spielfeldHeight -height/2; }		}//ende moveY				private function ruckeln(){			//simuliert unebene Straße			if(Object(parent).zoomen === true){				var verschiebung = Math.random()*1;				var vorzeichen = Math.random();				if(vorzeichen >= 0.5) { return (verschiebung); }				else { return (-verschiebung); }			}else{				return(0);			}		}//ende ruckeln	}}