package  {	import flash.events.Event;	import flash.display.Loader;	import flash.net.URLVariables;	import flash.net.URLLoader;	import flash.net.URLRequest;		public class Hindernis extends Zoom{		public var bahn:uint = 2;		// wird der Konstruktorfunktion des jeweiligen Hindernisses übergeben				public function Hindernis() {			addEventListener(Event.ADDED_TO_STAGE, geadded);		}				private function geadded (evt:Event){			stop();			height = height/3;			width = width/3;				bestimmePosition();		}// ende geadded				private function bestimmePosition(){			gotoAndStop(bahn);			x = (Object(parent).spielfeldWidth)/4 * bahn - (Object(parent).spielfeldWidth)/8;		}//ende besimmePosition	}	}